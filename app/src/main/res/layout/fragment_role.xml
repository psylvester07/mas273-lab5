<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RoleFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_broadway_logo"
            android:src="@drawable/broadway_logo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            app:layout_constraintTop_toBottomOf="@id/image_view_broadway_logo"
            app:layout_constraintStart_toStartOf="@id/image_view_broadway_logo"
            app:layout_constraintEnd_toEndOf="@id/image_view_broadway_logo"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/text_view_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/text_view_name"
            app:layout_constraintStart_toStartOf="@id/text_view_name"
            app:layout_constraintEnd_toEndOf="@id/text_view_name"/>

        <TextView
            android:id="@+id/text_view_roles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Role(s):"
            app:layout_constraintTop_toBottomOf="@id/text_view_real_name"
            app:layout_constraintStart_toStartOf="@id/text_view_real_name"
            app:layout_constraintEnd_toEndOf="@id/text_view_real_name"
            android:layout_marginTop="30sp"/>

        <TextView
            android:id="@+id/text_view_role_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_view_roles"
            app:layout_constraintEnd_toEndOf="@id/text_view_roles"
            app:layout_constraintTop_toBottomOf="@id/text_view_roles"
            android:text=""
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/text_view_role_name_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_view_role_names"
            app:layout_constraintEnd_toEndOf="@+id/text_view_role_names"
            android:text=""
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_role_names"/>

        <Button
            android:id="@+id/button_act1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Act I"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/button_act2"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:text="Act II"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="25sp"
            android:text="Log Out"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>