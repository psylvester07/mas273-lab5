<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_broadway"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/broadway_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_view_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image_view_broadway"
            android:text="Enter your username"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="@id/image_view_broadway"
            app:layout_constraintEnd_toEndOf="@id/image_view_broadway"
            android:layout_marginTop="75dp"/>

        <EditText
            android:id="@+id/edit_text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_username"
            app:layout_constraintStart_toStartOf="@id/text_view_username"
            app:layout_constraintEnd_toEndOf="@id/text_view_username"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/text_view_passphrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passphrase"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/edit_text_username"
            app:layout_constraintStart_toStartOf="@id/edit_text_username"
            app:layout_constraintEnd_toEndOf="@id/edit_text_username"
            android:layout_marginTop="75dp"/>

        <EditText
            android:id="@+id/edit_text_passphrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_view_passphrase"
            app:layout_constraintStart_toStartOf="@id/text_view_passphrase"
            app:layout_constraintEnd_toEndOf="@id/text_view_passphrase"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/button_log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edit_text_passphrase"
            app:layout_constraintStart_toStartOf="@id/edit_text_passphrase"
            app:layout_constraintEnd_toEndOf="@id/edit_text_passphrase"
            android:layout_marginTop="30dp"
            android:text="Log In"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>